# Environment Configuration Example
# Copy this file to .env.local and customize the values for your environment

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Backend API URL - REQUIRED in production
# Development default: http://localhost:8080
# Production: Set to your actual backend URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080

# PDF generation timeout in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_PDF_TIMEOUT=30000

# Maximum number of retry attempts for failed requests (default: 3)
NEXT_PUBLIC_PDF_MAX_RETRIES=3

# Delay between retry attempts in milliseconds (default: 1000 = 1 second)
NEXT_PUBLIC_PDF_RETRY_DELAY=1000

# Health check interval in milliseconds (default: 60000 = 1 minute)
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable backend PDF generation (default: true)
NEXT_PUBLIC_ENABLE_BACKEND_PDF=true

# Enable client-side PDF generation (default: true)
NEXT_PUBLIC_ENABLE_CLIENT_PDF=true

# Enable error reporting (default: true in production, false in development)
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Enable debug mode (default: true in development, false in production)
NEXT_PUBLIC_DEBUG_MODE=true

# Enable health checks (default: true)
NEXT_PUBLIC_ENABLE_HEALTH_CHECKS=true

# =============================================================================
# PDF GENERATION SETTINGS
# =============================================================================

# Maximum PDF file size in bytes (default: 52428800 = 50MB)
NEXT_PUBLIC_PDF_MAX_FILE_SIZE=52428800

# PDF compression level 0-9 (default: 6)
NEXT_PUBLIC_PDF_COMPRESSION_LEVEL=6

# =============================================================================
# API SETTINGS
# =============================================================================

# API request timeout in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Maximum concurrent API requests (default: 5)
NEXT_PUBLIC_API_MAX_CONCURRENT=5

# Rate limit per minute (default: 60)
NEXT_PUBLIC_API_RATE_LIMIT=60

# =============================================================================
# ENVIRONMENT DETECTION
# =============================================================================

# Node environment (automatically set by Next.js)
# NODE_ENV=development

# Vercel environment (automatically set by Vercel)
# VERCEL_ENV=development